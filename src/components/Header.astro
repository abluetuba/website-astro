---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<headerLink>
    <nav>
        <div class="internal-links">
            <HeaderLink href="/">home</HeaderLink>
            <HeaderLink href="/blog">blog</HeaderLink>
            <!-- <HeaderLink href="/about">About</HeaderLink> -->
            <HeaderLink href="/projects">projects</HeaderLink>
            <HeaderLink href="https://github.com/abluetuba" target="_blank" rel="noopener noreferrer">github</HeaderLink>
        </div>
    </nav>
</headerLink>
<style>
    header {
        margin: 0;
        padding: 0 1em;
        background: white;
        box-shadow: 0 2px 8px rgba(var(--black), 5%);
    }
    h2 {
        margin: 0;
        font-size: 1em;
    }

    h2 a,
    h2 a.active {
        text-decoration: none;
    }
    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    nav a {
        padding: 0.5em 0.5em;
        color: var(--black);
        text-decoration: underline;
    }
    nav a.active {
        font-weight: 700;
    }
    .social-links,
    .social-links a {
        display: flex;
    }
    @media (max-width: 720px) {
        .social-links {
            display: none;
        }
    }
</style>
