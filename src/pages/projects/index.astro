---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';

const projects = [
    {
        title: 'ISS Tracker',
        description: 'A website that tracks the location of the International Space Station',
        links: ['https://msnctrl.netlify.app', 'https://github.com/abluetuba/mission-control'],
        image: '/iss.jpg'
    },
    {
        title: 'unoXdue',
        description: 'A website that shows the results of the Serie A (Italian football league)',
        links: ['https://unoxdue.netlify.app', 'https://github.com/abluetuba/unoxdue'],
        image: '/unoxdue.jpg'
    },
    {
        title: 'unoXdue - flutter',
        description: 'Flutter version of unoXdue',
        links: ['https://github.com/abluetuba/unoxdue-flutter'],
        image: '/scores.jpg'
    }
]
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 100%;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				/* width: calc(50% - 1rem); */
			}
			ul li * {
				transition: 0.2s ease;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}

			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						projects.map((prj) => (
							<li>
									<h4 class="title">{prj.title}</h4>
									<p class="description">
										{prj.description}
									</p>
									{
										prj.links.map((link) => (
											<p><a href={link} target="_blank" rel="noopener noreferrer">{link}</a></p>
										))
									}
									<img src={prj.image} alt="" />
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<!-- <Footer /> -->
	</body>
</html>
